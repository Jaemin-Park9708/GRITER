	<update id="update" parameterType="Comment">
		UPDATE comments
		SET content = #{content}, modified_date = CURRENT_TIMESTAMP
		WHERE comment_id = #{comment_id}
	</update>
	
	<delete id="delete" parameterType="int">
		DELETE FROM comments
		WHERE comment_id = #{comment_id}
	</delete>
</mapper>