<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.griter.model.dao.PostDao">

	<!-- <insert id="create" parameterType="Post">
		INSERT INTO posts (post_id, user_id, title, content, genreated_date, modified_date, view_cnt, like_cnt, category)
		VALUES (0, #{user_id}, #{title}, #{content}, #{genreated_date}, #{modified_date}, #{view_cnt}, #{like_cnt}, #{category})
	</insert> -->
	<insert id="create" parameterType="Post">
		INSERT INTO posts (post_id, user_id, title, content, category)
		VALUES (0, #{user_id}, #{title}, #{content}, #{category})
	</insert>
	
	
	<select id="selectAll" resultType="map">
		SELECT * FROM posts as p
		JOIN users as u
		ON p.user_id = u.user_id
	</select>
	
	<select id="selectByPostId" parameterType="int" resultType="map">
		SELECT * FROM posts as p
		JOIN comments as c
		ON p.post_id = p.post_id
		WHERE p.post_id = #{post_id}
	</select>	
	
	<select id="selectCategory" parameterType="String" resultType="Post">
		SELECT * FROM posts
		WHERE category = #{category}
	</select>
	
	<select id="selectByUserId" parameterType="int" resultType="Post">
		SELECT * FROM posts
		WHERE user_id = #{user_id}
	</select>
	
	<update id="update" parameterType="Post">
		UPDATE posts
		SET title = #{title}, content = #{content}, modified_date = CURRENT_TIMESTAMP, category = #{category}
		WHERE post_id = #{post_id}
	</update>
	
 	<delete id="delete" parameterType="int">
 		DELETE FROM posts
 		WHERE post_id = #{post_id}
 	</delete>
</mapper>